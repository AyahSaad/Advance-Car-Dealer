<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="#DADEDF"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm the Reservation"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/confirm"
        ></TextView>

    <ImageView
        android:id="@+id/carPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/carPhoto"
        android:text="Here will be the text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/ReservedCarInfo"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ReservedCarInfo">
        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="Cancel"
            android:background="@color/white"
            android:textColor="@color/black"
            android:id="@+id/cancel"></Button>
        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="Confirm"
            android:background="@color/black"
            android:textColor="@color/white"
            android:id="@+id/confirmBtn"></Button>

    </LinearLayout>

</RelativeLayout>